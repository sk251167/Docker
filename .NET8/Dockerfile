#========================================================================================================================#
# Begin common commands                                                                                                  #
#========================================================================================================================#

# Use aspnet:8.0-nanoserver-ltsc2022 as base image
FROM mcr.microsoft.com/dotnet/aspnet:8.0-nanoserver-ltsc2022

#========================================================================================================================#
# End common commands                                                                                                    #
#========================================================================================================================#

#========================================================================================================================#
# Begin application api installation commands                                                                            #
#========================================================================================================================#

# Set working directory
WORKDIR "/Program Files/Application/"

# Expose ports
EXPOSE 80 443

# Copy files from host machine to image
COPY ["publish/", "."]

#========================================================================================================================#
# End application api installation commands                                                                              #
#========================================================================================================================#

#========================================================================================================================#
# The container stays up as long as this process is running                                                              #
#========================================================================================================================#
	
ENTRYPOINT ["dotnet", "Application.dll"]

#========================================================================================================================#